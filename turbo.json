{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "clean"],
      "outputs": [
        "dist/**",
        "build/**",
        "apps/**/.next/**",
        "apps/**/dist/**",
        "packages/**/dist/**"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "reports/**"],
      "cache": true
    },
    "lint": {
      "outputs": []
    },
    "storybook": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}